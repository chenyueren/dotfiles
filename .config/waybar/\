#workspaces {
    background-color: @workspaces;
}

#workspaces button {
    border-radius: .5em;
}

/* active 活動中，指該工作區中有視窗存在*/
#workspaces button.active {
    color: @green;
}

/* empty 空的，指該工作區中沒有視窗存在*/
#workspaces button.empty {
    color: @blue;
}

/* persistent 存在的，指該工作區中預先建立，並存在著*/
#workspaces button.persistent {
    color: @pink;
}

/* special 特殊的 */
#workspaces button.special {
    color: @red;
}

/* visible 可見的，指該工作區是目前使用中的 */
#workspaces button.visible {
    color: @yellow;
}

